{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "jsx": "react",
    "outDir": "./build",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "domain/**/*",
    "client/**/*",
    "communication/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "server"
  ]
}