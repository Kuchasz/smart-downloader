{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "outDir": "./build",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "domain/**/*",
    "server/**/*",
    "jobs/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "communication"
  ]
}